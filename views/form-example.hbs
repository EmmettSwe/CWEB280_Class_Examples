<form action="/examples/form" method="post" >
    <h1>{{title}}</h1>
    <!-- Email -->
    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" class="form-control {{#if err.email}}is-invalid{{/if}}" placeholder="Enter email" name="email" id="email" value="{{submittedEmail}}">
        <div class="invalid-feedback">
            <p>{{err.email}}</p>
        </div>
    </div>

    <!-- Password-->
    <div class="mb-3">
        <label for="pwd" class="form-label">Password:</label>
        <input type="password" class="form-control {{#if err.pwd}}is-invalid{{/if}}" placeholder="Enter password" name="pwd" id="pwd" value="{{submittedPassword}}">
        <div class="invalid-feedback">
            <p>{{err.pwd}}</p>
        </div>
    </div>

    <!-- Password-->
    <div class="mb-3">
        <label for="Phone" class="form-label">Phone Number: (OPTIONAL)</label>
        <input type="tel" class="form-control {{#if err.Phone}}is-invalid{{/if}}" placeholder="Enter phone number" name="Phone" id="Phone" value="{{submittedPhone}}">
        <div class="invalid-feedback">
            <p>{{err.Phone}}</p>
        </div>
    </div>

    <!-- Agree to terms-->
    <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input {{#if err.agreed}}is-invalid{{/if}}" name="agreed" id="agreed" value="yes" {{#if submittedAgreed}}checked{{/if}}>
        <label for="agreed" class="form-check-label">Agree to terms</label>
        <div class="invalid-feedback">
            <p>{{err.agreed}}</p>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<!--See if form submit worked - we will output the submitted info on this page-->
