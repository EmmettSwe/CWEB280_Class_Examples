{{#if isSubmitted}}
    <div class="card p-2 mb-3">
        <h2>Submitted values -- this is dangerous</h2>
        <p>Email: {{submittedEmail}}</p>
        <p>Password: {{submittedPassword}}</p>
        <p>Agreed: {{submittedAgreed}}</p>
    </div>
{{/if}}

<form action="/examples/upload" method="post" enctype="multipart/form-data">
    <h1>{{title}}</h1>
    <!--File Title-->
    <div class="mb-3">
        <label for="title1" class="form-label">File 1 Title:</label>
        <input type="text" class="form-control" placeholder="Enter a file title" name="title1" id="title1" value="{{submittedEmail}}">
    </div>
    <!--File Input-->
    <div class="mb-3">
        <label for="file1" class="form-label">File 1:</label>
        <input type="file" class="form-control" placeholder="Select a file" name="file1" id="file1" value="{{submittedEmail}}">
    </div>
    <button type="submit" class="btn btn-warning">Upload File</button>
</form>